<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.bookmarkers.UI.Controller.LoginController">
   <children>
      <Line endX="600.0" fill="#f8f8f8" layoutX="101.0" layoutY="100.0" stroke="WHITE" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" />
      <Label layoutX="52.0" layoutY="35.0" prefHeight="31.0" prefWidth="405.0" text="Welcome To Bookmarks Library" textFill="WHITE">
         <font>
            <Font size="26.0" />
         </font>
      </Label>
      <HBox layoutX="120.0" layoutY="137.0" prefHeight="100.0" prefWidth="357.0">
         <children>
            <VBox prefHeight="100.0" prefWidth="119.0" spacing="38.0">
               <children>
                  <Label text="User Name" textFill="WHITE" />
                  <Label text="Password" textFill="WHITE" />
               </children>
               <padding>
                  <Insets left="40.0" top="8.0" />
               </padding>
            </VBox>
            <VBox prefHeight="100.0" prefWidth="229.0" spacing="30.0">
               <children>
                  <JFXTextField fx:id="username" promptText="username" unFocusColor="WHITE" />
                  <JFXPasswordField fx:id="password" promptText="password" unFocusColor="WHITE" />
               </children>
               <padding>
                  <Insets left="10.0" right="10.0" />
               </padding>
            </VBox>
         </children>
      </HBox>
      <HBox layoutX="149.0" layoutY="279.0" prefHeight="39.0" prefWidth="378.0" spacing="60.0">
         <children>
            <JFXButton fx:id="userlogin" onAction="#login" text="Reader Login" textAlignment="CENTER">
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
               <effect>
                  <Blend />
               </effect></JFXButton>
            <JFXButton fx:id="adminLogin" onAction="#loginAsAdmin" text="Admin Login">
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor></JFXButton>
         </children>
      </HBox>
   </children>
   <stylesheets>
      <URL value="@main.css" />
      <URL value="@blueTheme.css" />
   </stylesheets>
</AnchorPane>
